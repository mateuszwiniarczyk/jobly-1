// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("DATABASE_URL")
}

enum Type {
  Person
  Company
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String   @unique
  password      String
  type          Type
  salt          String      

  @@map("users")
}